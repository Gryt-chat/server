# Gryt Self-Hosted Server Configuration
# Edit this file, then run start.bat to launch all services.

# ── Server ─────────────────────────────────────────────────────────
SERVER_NAME=My Gryt Server
PORT=5000

# ── Database (SQLite, stored in DATA_DIR) ──────────────────────────
DATA_DIR=./data

# ── Storage (filesystem is the default for self-hosted) ────────────
STORAGE_BACKEND=filesystem
# S3_BUCKET is used as the subdirectory name inside DATA_DIR
S3_BUCKET=uploads

# ── Identity (built-in provider for self-hosted) ──────────────────
IDENTITY_MODE=builtin
# EXTERNAL_HOST should be set to the URL clients use to reach this server
# EXTERNAL_HOST=http://your-server-ip:5000

# ── SFU (voice/video) ─────────────────────────────────────────────
SFU_PORT=5005
SFU_WS_HOST=ws://127.0.0.1:5005
SFU_PUBLIC_HOST=127.0.0.1:5005
DISABLE_STUN=true

# ── Image Worker ──────────────────────────────────────────────────
# IMAGE_WORKER_CONCURRENCY=2
# IMAGE_WORKER_POLL_MS=1000

# ── Optional settings ─────────────────────────────────────────────
# CORS_ORIGIN=*
# JWT_SECRET=change-me-to-something-random
# REFRESH_TOKEN_TTL_DAYS=7
